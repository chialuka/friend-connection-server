{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "module": "commonjs",
    "baseUrl": ".",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "paths": {
      "src": ["src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.*"]
}
